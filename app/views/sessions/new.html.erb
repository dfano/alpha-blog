<h1>Login</h1>

		<%= form_for(:session, :html => {class: 'form-horizontal', role: "form"}, url: login_path) do |f| %>

		<div class="form-group row"> 			
			<%= f.label :email, for: "input", class: "control-form-lable col-sm-2" %>
			<div class="col-sm-10">
				<%= f.email_field :email, class: "form-control", placeholder: "enter email", autofocus: true%>
			</div>	
		</div>

		<div class="form-group row"> 			
			<%= f.label :password, for: "input", class: "control-form-lable col-sm-2" %>
			<div class="col-sm-10">
				<%= f.password_field :password, class: "form-control", autocomplete: "off" , autofocus: true%>
			</div>	
		</div>

		<div class="form-group row">
			<div class="col-sm-10 offset-sm-2">
				<%= f.submit "login", class: "btn btn-primary btn-lg" %>
			</div>
		</div>


		<% end %>